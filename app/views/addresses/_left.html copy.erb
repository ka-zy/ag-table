<div class="left">
  ＜階層ツリー＞
  <% @com.each do |com| %>
   <div class="company">
    <ul>
     <li>
      <%# <% if com.company.present? %> 
       <%= link_to com.company, users_path %>
      <%# <% end %>  
      <% @gro.each do |gro| %>
       <div class="group">
        <ul>
         <li>
          <% if com.company == gro.company %>
           <% if gro.group.present? %> 
            <%= link_to gro.group, users_path  %>
           <% end %> 
           <% @dep.each do |dep| %>
            <div class="depertment">
             <ul>
              <li>
              <% if com.company == dep.company && gro.group == dep.group %>
                <% if dep.depertment.present? %>
                 <%= link_to dep.depertment, users_path  %>
                <% end %>
                <% @sec.each do |sec| %>
                 <div class="section">
                  <ul>
                   <li>
                   <% if com.company == sec.company && gro.group == sec.group && dep.depertment == sec.depertment %>
                     <% if sec.section.present? %>
                      <%= link_to sec.section, users_path  %>
                     <% end %>
                     <% @unit.each do |unit| %>
                      <div class="unit">
                       <ul>
                        <li>
                        <% if com.company == unit.company && gro.group == unit.group && dep.depertment == unit.depertment && sec.section == unit.section %>
                          <% if unit.unit.present? %>
                           <%= link_to unit.unit, users_path  %>
                          <% end %>
                        <% end %>
                        </li>
                       </ul>
                      </div>
                     <% end %>
                   <% end %>
                   </li>
                  </ul>
                 </div>
                <% end %>
              <% end %> 
              </li>
             </ul>
            </div>
           <% end %> 
          <% end %> 
         </li>
        </ul>
       </div>
      <% end %> 
     </li>
    </ul>
   </div>
  <% end %>
</div>